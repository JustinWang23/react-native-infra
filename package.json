{
  "name": "react-native-ts-scss",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "tslint -c tslint.json --fix '*.ts*'",
    "prettier": "prettier --write '*.ts*'"
  },
  "dependencies": {
    "react": "16.8.3",
    "react-native": "0.62.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.8",
    "@types/react-native": "kristerkari/react-native-types-for-css-modules#v0.57.29",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.5.0",
    "babel-plugin-react-native-classname-to-style": "^1.2.2",
    "babel-plugin-react-native-platform-specific-extensions": "^1.1.1",
    "husky": ">=1",
    "jest": "^24.5.0",
    "jest-css-modules-transform": "^2.5.0",
    "lint-staged": ">=8",
    "metro-react-native-babel-preset": "^0.53.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.18.2",
    "react-native-sass-transformer": "^1.4.0",
    "react-native-typescript-transformer": "^1.2.12",
    "react-test-renderer": "16.8.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react-native": "^0.0.7",
    "typescript": "^3.3.3333"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest",
      ".+\\.(css|styl|less|sass|scss)$": "<rootDir>/node_modules/jest-css-modules-transform"
    },
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
